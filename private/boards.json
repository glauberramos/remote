[
  {
    "site": "Authentic Jobs",
    "base_url": "http://www.authenticjobs.com",
    "url": "http://www.authenticjobs.com/#onlyremote=1",
    "rules": {
      "entries": "#listings > li",
      "url": "a",
      "title": "{entry} a .role h3",
      "company": "{entry} a .role h4",
      "type": "{entry} a .meta .type",
      "where": "{page} #location span",
      "description": "{page} #description"
    }
  },
  {
    "site": "Jobs Remotely",
    "base_url": "",
    "url": "https://jobsremotely.com/remote-jobs/",
    "rules": {
      "entries": ".job_listings .job_listing",
      "url": "> a",
      "title": "{entry} h3",
      "company": "{entry} .company",
      "type": "{entry} .meta .job-type",
      "where": "{page} .location",
      "description": "{page} .job_description .text"
    }
  },
  {
    "site": "nomadjobs.io",
    "base_url": "",
    "url": "http://nomadjobs.io/",
    "rules": {
      "entries": "#jobsboard [data-search]",
      "url": ".position a",
      "title": "{entry} .position",
      "company": "{entry} .company",
      "type": false,
      "where": false,
      "description": false
    }
  }
]
